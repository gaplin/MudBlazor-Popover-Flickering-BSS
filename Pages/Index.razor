@page "/"

<PageTitle>Index</PageTitle>

<MudGrid Class="px-8 py-8">
    <MudItem xs="8"/>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@ToggleOpen">Open</MudButton>
        @if (_isOpen)
        {
        <MudPopover Open="@_isOpen" Fixed="true" Class="px-4 pt-4" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <div class="d-flex flex-column">
                <MudText>Content of the popover can be anything.</MudText>
                <MudButton OnClick="@ToggleOpen" Class="ml-auto mr-n3 mb-1" Color="Color.Error">Close</MudButton>
            </div>
        </MudPopover>
        }
</MudGrid>




@code {
    public bool _isOpen;

    public void ToggleOpen() {
        if (_isOpen)
            _isOpen = false;
        else
            _isOpen = true;
    }
}